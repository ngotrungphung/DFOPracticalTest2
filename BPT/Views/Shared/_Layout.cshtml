

@using System.Web.Optimization


<!DOCTYPE html>
<html ng-app="BPT">
<head>
    <base href="@Url.Content("~/")" />
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{page.title}} | BPT</title>
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <link href="@Url.Content("~/Content/font-awesome-4.7.0/css/font-awesome.min.css")" rel="stylesheet" />

    @Styles.Render("~/css/vendor")
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="@Url.Content("~/Content/themes/css/AdminLTE.css")" rel="stylesheet" />

    @*@Styles.Render("~/Scripts/ngProgress/ngProgress.css")*@

    @*<script src="app/components/ngProgress/ngProgress.js"></script>
        <link rel="stylesheet" href="ngProgress.css">*@

    <base href="@Url.Content("~/")" />

    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body class="hold-transition skin-blue sidebar-mini" ng-cloak>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li><a href="#/admin/user">User</a></li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="wrapper">

        @RenderBody()
    </div>
    <div class="loader"><div class="loadergif"></div></div>
    @*@Scripts.Render("~/scripts/ngProgress/ngProgress.min.js")*@

    @Scripts.Render("~/scripts/vendor")
    @Scripts.Render("~/scripts/app")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
